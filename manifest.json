{
  "manifest_version": 2,
  "name": "To-Do List Extension",
  "version": "1.0",
  "description": "A simple To-Do List extension with dark mode.",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "48": "icon.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-inline'; object-src 'self'"
}

